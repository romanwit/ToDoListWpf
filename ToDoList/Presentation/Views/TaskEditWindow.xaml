<Window x:Class="ToDoList.Presentation.Views.TaskEditWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Edit Task" Height="412" Width="400"
        WindowStartupLocation="CenterOwner">
    <StackPanel Margin="10,10,10,0" VerticalAlignment="Top" Height="370">
        <TextBlock Text="Title:" Margin="0,0,0,5"/>
        <TextBox Text="{Binding Title, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}" Margin="0,0,0,10"/>

        <TextBlock Text="Description:" Margin="0,0,0,5"/>
        <TextBox Text="{Binding Description}" Height="60" Margin="0,0,0,10"
                 TextWrapping="Wrap" AcceptsReturn="True"/>

        <TextBlock Text="Due date:" Margin="0,0,0,5"/>
        <DatePicker SelectedDate="{Binding DueDate}" Margin="0,0,0,10"/>

        <TextBlock Text="Completed:" Margin="0,0,0,5"/>
        <CheckBox IsChecked="{Binding IsCompleted}"  Margin="0,0,0,10"/>

        <TextBlock Text="Priority:" Margin="0,0,0,5"/>
        <ComboBox ItemsSource="{Binding Priorities}" SelectedItem="{Binding Priority}" Margin="0,0,0,10"/>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
            <Button Content="OK" Width="75" Command="{Binding OkCommand}" IsDefault="True"/>
            <Button Content="Cancel" Width="75" Command="{Binding CancelCommand}"/>
        </StackPanel>
    </StackPanel>
</Window>
